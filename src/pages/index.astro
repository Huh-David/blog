---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

// Get the 4 most recent posts
const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex flex-col min-h-screen justify-start">
    <Header />
    <main class="flex-grow">
      <h1>Hello there!</h1>
      <p>Check out my latest blog posts</p>

      <div class="mt-8 space-y-6">
        {
          posts.map((post) => (
            <article class="flex gap-4 p-4 rounded-lg backdrop-blur-md hover:bg-blue-200/40 transition-colors duration-300">
              <div class="flex-shrink-0">
                <a href={`/blog/${post.id}/`}>
                  <img
                    src={post.data.heroImage}
                    alt=""
                    width={120}
                    height={90}
                    class="rounded-md object-cover h-[90px] w-[120px]"
                  />
                </a>
              </div>
              <div class="flex flex-col flex-grow">
                <div class="flex items-center justify-between mb-1">
                  <a href={`/blog/${post.id}/`} class="hover:text-blue-300">
                    <h3 class="text-xl font-bold text-white">
                      {post.data.title}
                    </h3>
                  </a>
                  <FormattedDate date={post.data.pubDate} />
                </div>
                <p class="text-gray-700 text-sm line-clamp-2">
                  {post.data.description}
                </p>
                <div class="mt-auto pt-2">
                  <a href={`/blog/${post.id}/`} class="text-sm">
                    Read more â†’
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
